<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 基本应用主题。 -->
    <style name="Theme.MoelyApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 主品牌颜色 (Purple) -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/purple_200</item>
        <item name="colorOnPrimaryContainer">@color/purple_700</item>
        
        <!-- 次品牌颜色 (Teal) -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        
        <!-- 背景和表面颜色 -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurfaceVariant">#FFF5F5F5</item>
        <item name="colorOnSurfaceVariant">#FF424242</item>
        
        <!-- 边框颜色 -->
        <item name="colorOutline">#FFBDBDBD</item>
        
        <!-- 错误颜色 -->
        <item name="colorError">#FFB00020</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- 状态栏和导航栏颜色 -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_700</item>
        <item name="android:windowBackground">#FFFAFAFA</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>
</resources>
